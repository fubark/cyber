-- insertByte()
t.eq(arr.insertByte(2, 97), array('abacğŸ¦ŠxyzğŸ¶'))

-- insert()
t.eq(try arr.insert(-1, array('foo')), error.OutOfBounds)
t.eq(arr.insert(0, array('foo')), array('fooabcğŸ¦ŠxyzğŸ¶'))
t.eq(arr.insert(3, array('fooğŸ¦Š')), array('abcfooğŸ¦ŠğŸ¦ŠxyzğŸ¶'))
